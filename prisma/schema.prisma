generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums

enum ProposalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ConfidenceLevel {
  HIGH
  MEDIUM
  LOW
}

enum ExtractionSource {
  AI
  USER
}

// Models

model Proposal {
  id       String  @id @default(cuid())
  hash     String  @unique
  fileName String
  fileUrl  String?

  status         ProposalStatus @default(PENDING)
  approvalStatus ApprovalStatus @default(PENDING)

  // One Proposal has Many Fields
  fields ExtractionField[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExtractionField {
  id String @id @default(cuid())

  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  // The Key (e.g. "companyName", "trade")
  name String

  // The Data
  value String?

  // The Metadata (Always present)
  // AI sets this based on analysis.
  // User Edit sets this to HIGH / "Manual user edit".
  confidence ConfidenceLevel
  reasoning  String
  source     ExtractionSource @default(AI)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Constraint: One value per field per proposal
  @@unique([proposalId, name])
}
