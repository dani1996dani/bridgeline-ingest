generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ProposalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Proposal {
  id       String  @id @default(cuid())
  hash     String  @unique
  fileName String
  fileUrl  String?

  status     ProposalStatus @default(PENDING)
  isVerified Boolean        @default(false)

  // Relation
  extractions Extraction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Extraction {
  id String @id @default(cuid())

  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  companyName String?
  contactName String?
  email       String?
  phone       String?
  trade       String?

  // We store the Confidence scores and Reasoning strings here to keep the table clean for this demo project
  analysis Json

  createdAt DateTime @default(now())
}
